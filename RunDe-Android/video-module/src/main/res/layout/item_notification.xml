<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/tab_view_normal_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/id_notification_icon"
        android:layout_marginStart="6dp"
        android:src="@drawable/user_head_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/id_content"
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>


    <ImageView
        android:id="@+id/id_last_one"
        android:padding="3dp"
        android:src="@drawable/icon_last"
        android:layout_width="26dp"
        android:layout_height="26dp"/>

    <ImageView
        android:id="@+id/id_play_btn"
        android:layout_marginStart="10dp"
        android:src="@drawable/icon_pause"
        android:layout_width="26dp"
        android:layout_height="26dp"/>

    <ImageView
        android:id="@+id/id_next_one"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:padding="3dp"
        android:src="@drawable/icon_next"
        android:layout_width="26dp"
        android:layout_height="26dp"/>

    <ImageView
        android:id="@+id/id_close_play"
        android:padding="6dp"
        android:src="@drawable/pop_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>