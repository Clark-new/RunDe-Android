<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--导航的按钮样式 parent="@style/Widget.AppCompat.Button.Borderless"-->
    <style name="pilotButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_width">260dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/pilot_button_bg</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="baseTitleImageTheme">
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="phoneLiveLandscapeTitleViewTheme" parent="baseTitleImageTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/pc_live_top_title</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:maxEms">15</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="liveRadioButtonTheme">
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/pc_live_infos_tag</item>
        <item name="android:button">@null</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/portrait_tag_bg</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="HeadIconStyle">
        <item name="android:layout_width">38dp</item>
        <item name="android:layout_height">38dp</item>
        <item name="hv_border_color">#fff</item>
        <item name="hv_border_width">1dp</item>
        <item name="hv_shadow_color">#cccccc</item>
        <item name="hv_shadow_width">2dp</item>
    </style>

    <style name="userCountTextViewTheme">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:drawableLeft">@mipmap/portrait_people</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:shadowColor">#80666666</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--登录页样式-->
    <style name="loginTipsTheme">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/activity_top_tip_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginInfosLayoutTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:background">@drawable/login_info_bg</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginLayoutTheme">
        <item name="android:layout_marginLeft">81dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="loginLineLayoutTheme">
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:layout_marginRight">19dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
    </style>

    <style name="loginLineTextViewTheme">
        <item name="android:textSize">@dimen/item_tip_size</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="loginLineEditTextTheme">
        <item name="android:textSize">@dimen/item_tip_size</item>
        <item name="android:background">@null</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">81dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="loginLineEditTextPasswordTheme" parent="loginLineEditTextTheme">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="loginLineBottomViewTheme">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#e8e8e8</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.33dp</item>
    </style>

    <style name="loginButtonTheme" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">42dp</item>
        <item name="android:layout_marginEnd">36dp</item>
        <item name="android:layout_marginStart">36dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:background">@drawable/login_button_bg</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17sp</item>
        <item name="android:enabled">false</item>
    </style>





</resources>
